extends base

block main
	main.main
		.forgot-form
			h2.heading-secondary.ma-bt-lg Please Enter Your Email
			form.form.form--forgot
				.form__group
					label.form__label(for='email') Email
					input#email.form__input(type='email', placeholder='you@example.com', required)
				.form__group
					button.btn.btn--green Submit