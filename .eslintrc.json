{
    "extends": ["prettier", "plugin:node/recommended-module"], // Note: include "airbnb" for react project
    "plugins": ["prettier"], // Note: include "javascriptreact" for react project
    // "parserOptions": {
    //     "sourceType": "module"
    // },
    "rules": {
        "import/newline-after-import": "off",
        "prettier/prettier": "error",
        "spaced-comment": "off",
        "no-console": "warn",
        "consistent-return": "off",
        "func-names": "off",
        "object-shorthand": "off",
        "no-process-exit": "off",
        "no-param-reassign": "off",
        "no-return-await": "off",
        "no-underscore-dangle": "off",
        "class-methods-use-this": "off",
        "prefer-destructuring": ["error", { "object": true, "array": false }],
        "no-unused-vars": ["error", { "argsIgnorePattern": "req|res|next|val" }]
    },
    "env": {
        "browser": true,
        "node": true
    }
}
